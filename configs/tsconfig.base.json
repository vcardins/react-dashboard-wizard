{
	"exclude": [
		"dist",
		"node_modules",
		"../src/**/*.spec.*",
		"../src/**/*.test.*"
	],
	"compilerOptions": {
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"baseUrl": ".",
		"checkJs": true,
		"declaration": true,
		"declarationMap": true,
		"emitDecoratorMetadata": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"forceConsistentCasingInFileNames": true,
		"importHelpers": true,
		"jsx": "react-jsx",
		"noEmit": false,
		"rootDirs": ["../src"],
		"rootDir": "../src",
		"noFallthroughCasesInSwitch": true,
		"noImplicitOverride": true,
		"noImplicitReturns": true,
		"noPropertyAccessFromIndexSignature": true,
		"noUnusedLocals": true,
		"resolveJsonModule": true,
		"skipDefaultLibCheck": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true,
		"typeRoots": [
			"@types",
			"node_modules/@types",
			"../typings/mixins.d.ts"
		],
		"paths": {
			"context": ["../src/context"],
			"types": ["../src/types"],
			"components": ["../src/components"]
		}
	},
	"files": ["../src/index.ts", "../typings/mixins.d.ts"]
}
