{
	"extends": "./configs/tsconfig.base.json",
	"include": ["src"],
	"exclude": [
		"dist",
		"node_modules",
		"src/**/*.spec.*",
		"src/**/*.test.*"
	],
	"compilerOptions": {
		"typeRoots": [
			"@types",
			"node_modules/@types",
			"./typings/mixins.d.ts"
		],
		"paths": {
			"context": ["context"],
			"types": ["types"],
			"components": ["components"]
		}
	},
	"files": ["./src/index.ts"]
}
